generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String @unique
  
  password     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  refreshToken String?
  shops        Shops[]
}

model Shops {
  id     String @id @default(uuid())
  userId String

  name        String @unique
  latitude    Float
  longitude   Float
  description String
  photo       String
  address     String
 createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User      @relation(fields: [userId], references: [id])
  product Product[]
}

model Product {
  id        String   @id @default(uuid())
  shopId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String  @unique
  available Boolean
  price     Int
  category  String

  shop Shops @relation(fields: [shopId], references: [id])
}
